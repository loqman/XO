<div class="col-xs-12">
  <h3 class="title">
    <%= image_tag 'logo.png', class: 'logo' %> دوز
    <small class="pull-left">
      <%= link_to @player.nickname, @player %>
    </small>
  </h3>
  <div class="col-xs-12 col-md-8 offset-md-2">
    <% @player.games.each do |game| %>
        <div class="card card-block game-block">
          <div class="row">
            <div class="col-xs-4 pull-xs-right">
              <h3><%= game.o_player.nickname %></h3>
              <br>
              <h3><%= game.o_player_winnings %></h3>
            </div>
            <div class="col-xs">
              <p class="card-text">
                <% if game.in_progress %>
                    <%= t 'text.game_in_progress' %>
                <% else %>
                    <%= t 'text.game_finished' %>
                <% end %>
              </p>
            </div>
            <div class="col-xs-4 pull-xs-right">
              <h3><%= game.x_player.nickname %></h3>
              <br>
              <h4><%= game.x_player_winnings %></h4>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>